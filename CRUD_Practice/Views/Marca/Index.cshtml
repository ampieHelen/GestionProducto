@model List<CRUD_Practice.Models.Marca>

<h2>Lista de Marcas</h2>

<a asp-action="Crear" class="btn btn-primary">Agregar Marca</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marca in Model)
        {
            <tr>
                <td>@marca.MarcaID</td>
                <td>@marca.Nombre</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@marca.MarcaID" class="btn btn-warning">Editar</a>
                    <form asp-action="Eliminar" asp-route-id="@marca.MarcaID" method="post" style="display:inline;" onsubmit="return confirmarEliminacion();">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function confirmarEliminacion() {
            return confirm("¿Estás seguro de que deseas eliminar esta marca?");
        }
    </script>
}