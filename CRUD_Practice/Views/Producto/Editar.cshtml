@model CRUD_Practice.Models.Producto

<h2>Editar Producto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="ProductoID" />

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre" required />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <input type="text" class="form-control" asp-for="Descripcion" required />
    </div>

    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" class="form-control" asp-for="Precio" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="MarcaID">Marca</label>
        <select asp-for="MarcaID" class="form-control" asp-items="ViewBag.Marcas">
            <option value="">Seleccione una Marca</option>
        </select>
    </div>

    <div class="form-group">
        <label for="CategoriaID">Categoría</label>
        <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.Categorias">
            <option value="">Seleccione una Categoría</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

