@model CRUD_Practice.Models.Categoria

<h2>Eliminar Categoría</h2>

<div>
    <h4>¿Estás seguro de que quieres eliminar esta Categoría?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="CategoriaID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
